<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.dcofer.twism" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TwismMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StreamsActivity"
            android:label="@string/title_activity_streams"
            android:parentActivityName=".TwismMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.dcofer.twism.TwismMainActivity" />
        </activity>
    </application>

</manifest>
